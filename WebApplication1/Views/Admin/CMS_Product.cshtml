<style type="text/css">
    .wrapper {
        position: relative;
        display: flex;
        min-width: 100px;
        padding-left: 0px;
    }

    .search-icon {
        position: absolute;
        top: 6px;
        left: 5px;
        width: 14px;
    }

    .clear-icon {
        position: absolute;
        top: 8px;
        right: 15px;
        width: 10px;
        cursor: pointer;
        <!-- visibility: hidden; -->
    }

    .search {
        border: 0.5px solid #909090;
        border-radius: 5px;
        height: 25px;
        width: 100%;
        padding: 2px 23px 2px 30px;
        outline: 0;
        background-color: #ffffff;
    }

        .search:hover, .search:focus {
            border: 1px solid #ca295f;
            background-color: white;
        }

    #product .section-title {
        text-align: center;
    }

    #product .owl-theme .owl-nav {
        margin-top: 30px;
    }

        #product .owl-theme .owl-nav [class*=owl-] {
            border-radius: 2px;
            font-size: 16px;
            width: 30px;
            height: 30px;
            line-height: 30px;
            text-align: center;
            padding: 0;
        }

    .product-thumb {
        background: #f9f9f9;
        position: relative;
    }

    .product-top {
        position: relative;
    }

    .product-image {
        background: linear-gradient(to right, #202020, #101010);
    }

    .product-date {
        background: linear-gradient(rgba(255, 0, 0, 0), rgba(0, 0, 0, 0.6));
        width: 100%;
        position: absolute;
        bottom: 0;
        padding: 20px 25px;
    }

        .product-date span,
        .product-author span {
            font-size: 14px;
            font-weight: bold;
        }

        .product-date span {
            color: #ffffff;
            display: inline-block;
            margin-right: 10px;
        }

    .product-detail {
        padding: 25px 25px 15px 25px;
    }

        .product-detail h3 {
            margin: 0 0 2px 0;
        }

    .product-info {
        border-top: 1px solid #f0f0f0;
        position: relative;
        clear: both;
        padding: 15px 25px;
    }

    .product-author,
    .product-author span {
        display: inline-block;
        vertical-align: middle;
    }

        .product-author img {
            display: inline-block !important;
            border-radius: 50px;
            width: 50px !important;
            height: 50px;
            margin-right: 10px;
        }

    .product-price {
        float: right;
        margin-top: 10px;
    }

        .product-price span {
            background: #29ca8e;
            border-radius: 2px;
            color: #ffffff;
            display: block;
            padding: 5px 10px;
        }

        .product-price.free span {
            background: #3f51b5;
        }




</style>

